<Window x:Class="WpfFonksiyon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStartupLocation="CenterScreen"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStyle="None"
    Title="Özel Fiyat" Height="600" Width="850">

    <Window.LayoutTransform>
        <ScaleTransform ScaleX="1.5" ScaleY="1.5" CenterX=".5" CenterY=".5" />
    </Window.LayoutTransform>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Style/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="10"
        BorderBrush="Black"
        BorderThickness="3"
        Background="Beige"
        Margin="24,24,24,10"
        Padding="4">
        <Border.Effect>
            <DropShadowEffect Color="Gray"
                      Opacity=".50"
                      ShadowDepth="16" />
        </Border.Effect>
        <Grid Margin="3,11,3,3">
            <Grid.RowDefinitions>
                <RowDefinition  Height="45"/>
                <RowDefinition  Height="1*"/>
                <RowDefinition  Height="75"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="1*"/>
                
            </Grid.ColumnDefinitions>


            <Grid Margin="3,11,3,3" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="1*"/>
                    <RowDefinition  Height="1*"/>
                    <RowDefinition  Height="1*"/>
                    <RowDefinition  Height="1*"/>
                    <RowDefinition  Height="1*"/>
                    <RowDefinition  Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="1*"/>
                    <ColumnDefinition  Width="1*"/>
                    <ColumnDefinition  Width="1*"/>
                    <ColumnDefinition  Width="1*"/>
                    <ColumnDefinition  Width="1*"/>
                    <ColumnDefinition  Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BtProgramdanCikis" 
                        Grid.Column="0"
                        Grid.Row="0"
                        Background="Red"
                        FontSize="20" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap"  Text="ÇIKIŞ" />
                    </StackPanel>
                </Button>
                <Button x:Name="BtZRaporu" 
                        Grid.Column="5"
                        Grid.Row="0"
                        Background="Green"
                        FontSize="20" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap"  Text="Z RAPORU" />
                    </StackPanel>
                </Button>
                <Button x:Name="BtXRaporu" 
                        Grid.Column="5"
                        Grid.Row="1"
                        Background="LimeGreen" 
                        FontSize="20" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap"  Text="X RAPORU" />
                    </StackPanel>
                </Button>

                <Button x:Name="BTEtiketleme" 
                        Grid.Column="5"
                        Grid.Row="3"
                        Background="Aquamarine"
                        FontSize="20" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap"  Text="ETİKET DÖKÜMÜ" />
                    </StackPanel>
                </Button>

                <Button x:Name="BTSayim" 
                        Grid.Column="5"
                        Grid.Row="4"
                        Background="GreenYellow" 
                        FontSize="20" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap"  Text="SAYIM GİRİŞİ" />
                    </StackPanel>
                </Button>

                <Button x:Name="BtAktarim" 
                        Grid.Column="3"
                        Grid.Row="0"
                        Background="Violet" 
                        FontSize="15" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock Name="TbAktarim" TextWrapping="Wrap" TextAlignment="Center"  Text="AKTARIM AÇ" />
                    </StackPanel>
                </Button>
                <Button x:Name="BtKilit" 
                        Grid.Column="2"
                        Grid.Row="1"
                        Background="DarkViolet"
                        FontSize="20" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Text="EKRAN KİLİTLE" />
                    </StackPanel>
                </Button>
                <Button x:Name="BtDisplay" 
                        Grid.Column="3"
                        Grid.Row="1"
                        Background="LightBlue" 
                        FontSize="20" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Text="DİSPLAY AC" />
                    </StackPanel>
                </Button>
                <Button x:Name="BtPluTusSablonu" 
                        Grid.Column="3"
                        Grid.Row="2"
                        Background="LightGray" 
                        FontSize="20" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Text="HIZLI TUŞ ŞABLONU" />
                    </StackPanel>
                </Button>
                <Button x:Name="BtRaportUrunSatis" 
                        Grid.Column="1"
                        Grid.Row="0"
                        Background="LemonChiffon"  
                        FontSize="15" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Text="ÜRÜN SATIŞ RAPORU" />
                    </StackPanel>
                </Button>
                <!-- ───────────────────────────────────────────────────────────────────────────────────────────────── -->
                <Button x:Name="BtGecmis" 
                        Grid.Column="1"
                        Grid.Row="1"
                        Background="DarkKhaki" 
                        FontSize="15" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Text="GEÇMİŞ İŞLEMLER" />
                    </StackPanel>
                </Button>
                <!-- ───────────────────────────────────────────────────────────────────────────────────────────────── -->
                <Button x:Name="BtCekmece" 
                        Grid.Column="1"
                        Grid.Row="2"
                        Background="Yellow" 
                        FontSize="20" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Text="ÇEKMECE AC" />
                    </StackPanel>
                </Button>

                <Button x:Name="BtUpgrade" 
                        Grid.Column="3"
                        Grid.Row="4"
                        Background="CadetBlue"
                        FontSize="20" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Text="UPGRADE" />
                    </StackPanel>
                </Button>

                <Button x:Name="BtDegisim" 
                        Grid.Column="1"
                        Grid.Row="4"
                        Background="lime" 
                        FontSize="20" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Width="Auto" 
                        Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Text="DEĞİŞİM İŞLEMİ" />
                    </StackPanel>
                </Button>



            </Grid>


            <Viewbox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Stretch="Uniform">
                <TextBlock x:Name="TbBaslik" Grid.Column="0" Grid.Row="0" 
                           HorizontalAlignment="Left"  
                           FontWeight="ExtraBold"  
                           TextAlignment="Center" 
                           Foreground="Black"   ><Run Language="tr-tr" Text="FONKSİYON LİSTESİ"/></TextBlock>
            </Viewbox>

            <Grid Margin="5" Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BtCikis"  
                        Background="Red"
                        FontSize="42" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Grid.Column="0"
                        Grid.ColumnSpan="4"
                        Width="Auto" 
                        Height="Auto">

                    <Viewbox Stretch="Uniform">
                        <TextBlock Text="KAPAT" />
                    </Viewbox>

                </Button>
            </Grid>





        </Grid>
    </Border>
</Window>
