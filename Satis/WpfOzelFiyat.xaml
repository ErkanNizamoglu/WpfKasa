<Window x:Class="WpfOzelFiyat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStartupLocation="CenterScreen"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStyle="None"
    Title="Özel Fiyat" Height="500" Width="350">

    <Window.LayoutTransform>
        <ScaleTransform ScaleX="1.5" ScaleY="1.5" CenterX=".5" CenterY=".5" />
    </Window.LayoutTransform>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Style/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border CornerRadius="10"
        BorderBrush="Gray"
        BorderThickness="3"
        Background="Beige"
        Margin="24,24,24,10"
        Padding="4">
        <Border.Effect>
            <DropShadowEffect Color="Gray"
                      Opacity=".50"
                      ShadowDepth="16" />
        </Border.Effect>
        <Grid Margin="3,11,3,3">
            <Grid.RowDefinitions>
                <RowDefinition  Height="45"/>
                <RowDefinition  Height="1*"/>
                <RowDefinition  Height="75"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
               
            </Grid.ColumnDefinitions>

            
            <Viewbox Grid.Column="0" Grid.Row="0" Stretch="Uniform">
                <TextBlock x:Name="TbBaslik" Grid.Column="0" Grid.Row="0" 
                           HorizontalAlignment="Left"  
                           FontWeight="ExtraBold"  
                           TextAlignment="Center" 
                           Foreground="Black"   ><Run Language="tr-tr" Text="ÖZEL FİYAT"/></TextBlock>
            </Viewbox>

            <Grid Grid.Row="1" Background="Black">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="45"/>
                    <RowDefinition  Height="1*"/>
                    <RowDefinition  Height="75"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>

                </Grid.ColumnDefinitions>

                <Border BorderBrush="Red"   Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Background="Beige" BorderThickness="2">
                    <DockPanel>
                        <Viewbox Stretch="Uniform" HorizontalAlignment="Right">
                    <TextBox x:Name="TbFiyat"  
                           HorizontalAlignment="Right"  
                             Text=""
                             FontSize="45"
                           FontWeight="ExtraBold"  
                           TextAlignment="Center" 
                           Foreground="Black"/>
                        </Viewbox>
                    </DockPanel>
                    
                </Border>


                <Border BorderBrush="Red"   Grid.Column="0" Grid.Row="1" Grid.RowSpan="4"  BorderThickness="2">
                    <Grid  x:Name="GrHesap"  Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="1*"/>
                            <RowDefinition  Height="1*"/>
                            <RowDefinition  Height="1*"/>
                            <RowDefinition  Height="1*"/>
                          
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>


                        <Button x:Name="Bt7" Background="Gray" 
                                    Style="{StaticResource RoundedButton}" 
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="0" 
                                    Grid.Row="0">
                            <Viewbox Stretch="Uniform">
                                <TextBlock Text="7" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="Bt8" Background="Gray" 
                                    Style="{StaticResource RoundedButton}" 
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="1" 
                                    Grid.Row="0">
                                    
                            <Viewbox Stretch="Uniform">
                                <TextBlock Text="8" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="Bt9" Background="Gray" 
                                    Style="{StaticResource RoundedButton}" 
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="2" 
                                    Grid.Row="0">
                            <Viewbox Stretch="Uniform">
                                <TextBlock Text="9" />
                            </Viewbox>
                        </Button>

                        <Button x:Name="Bt4" Background="Gray" 
                                    Style="{StaticResource RoundedButton}" 
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="0" 
                                    Grid.Row="1">
                            <Viewbox Stretch="Uniform">
                                <TextBlock Text="4" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="Bt5" Background="Gray" 
                                    Style="{StaticResource RoundedButton}" 
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="1" 
                                    Grid.Row="1">
                            <Viewbox Stretch="Uniform">
                                <TextBlock Text="5" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="Bt6" Background="Gray" 
                                    Style="{StaticResource RoundedButton}" 
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="2" 
                                    Grid.Row="1">
                            <Viewbox Stretch="Uniform">
                                <TextBlock Text="6" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="Bt1" Background="Gray" 
                                    Style="{StaticResource RoundedButton}" 
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="0" 
                                    Grid.Row="2">
                            <Viewbox Stretch="Uniform">
                                <TextBlock Text="1" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="Bt2" Background="Gray" 
                                    Style="{StaticResource RoundedButton}" 
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="1" 
                                    Grid.Row="2">
                            <Viewbox Stretch="Uniform">
                                <TextBlock Text="2" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="Bt3" Background="Gray" 
                                    Style="{StaticResource RoundedButton}" 
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="2" 
                                    Grid.Row="2">
                            <Viewbox Stretch="Uniform">
                                <TextBlock Text="3" />
                            </Viewbox>
                        </Button>
                        <Button x:Name="Bt0" Background="Gray" 
                                    Style="{StaticResource RoundedButton}" 
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="0" 
                                    Grid.Row="3" Grid.ColumnSpan="2">
                            <Viewbox Stretch="Uniform">
                                <TextBlock Text="0" />
                            </Viewbox>
                        </Button>
                       
                        <Button x:Name="BtVirgul" Background="Gray" 
                                    Style="{StaticResource RoundedButton}" 
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="2" 
                                    Grid.Row="3">
                            <Viewbox Stretch="Uniform">
                                <TextBlock Text="," />
                            </Viewbox>
                        </Button>

                    </Grid>
                </Border>
                
                

            </Grid>

            <Grid Margin="5" Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>


                <Button x:Name="BtCikis"  
                        Background="Red"
                        FontSize="42" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Grid.Column="0"
                        Width="Auto" 
                        Height="Auto">

                    <Viewbox Stretch="Uniform">
                        <TextBlock Text="ÇIKIŞ" />
                    </Viewbox>

                </Button>

                <Button x:Name="BtKayit"  
                        Background="Blue"  
                        FontSize="45" 
                        Style="{StaticResource MetroButton}"  
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" 
                        Grid.Column="1"
                        Width="Auto" 
                        Height="Auto">
                    <Viewbox Stretch="Uniform">
                        <TextBlock Text="KAYIT" />
                    </Viewbox>

                </Button>
            </Grid>





        </Grid>
    </Border>
</Window>
