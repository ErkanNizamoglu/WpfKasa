<UserControl x:Class="Uc_Numarator.UcNumarator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">

    <UserControl.Resources>
            <Style TargetType="Button">
                <Setter
            Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Rectangle Margin="2" SnapsToDevicePixels="true" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Background" Value="#EEEEEEEE"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Padding" Value="10 5"/>
                <Setter Property="FontSize" Value="14" />
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid>
                                <Border
                                x:Name="Border"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}" />

                                <ContentPresenter
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                Margin="{TemplateBinding Padding}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                RecognizesAccessKey="True" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="OpacityMask" Value="#AA888888"/>
                                    <Setter Property="Margin" Value="2 1" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <!--<Setter Property="Background" Value="DimGray"/>-->
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter Property="Foreground" Value="#ADADAD"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
        </Style>
    </UserControl.Resources>



    <Border BorderBrush="Aqua" Name="BrNumarator" Grid.Column="3"  Grid.RowSpan="4" BorderThickness="3">
        <Grid  x:Name="GrNumarator" Background="Beige" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition  Height="1*"/>
                <RowDefinition  Height="1*"/>
                <RowDefinition  Height="1*"/>
                <RowDefinition  Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="Bt7" Background="Gray" 
                        Click="BtClick"
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="0" 
                                    Grid.Row="0">
                <Viewbox Stretch="Uniform">
                    <TextBlock Text="7" />
                </Viewbox>
            </Button>
            <Button x:Name="Bt8" Background="Gray" 
                        Click="BtClick"
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="1" 
                                    Grid.Row="0">
                <Viewbox Stretch="Uniform">
                    <TextBlock Text="8" />
                </Viewbox>
            </Button>
            <Button x:Name="Bt9" Background="Gray" 
                                   Click="BtClick"
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="3" 
                                    Grid.Row="0">
                <Viewbox Stretch="Uniform">
                    <TextBlock Text="9" />
                </Viewbox>
            </Button>

            <Button x:Name="Bt4" Background="Gray" 
                                   Click="BtClick"
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="0" 
                                    Grid.Row="1">
                <Viewbox Stretch="Uniform">
                    <TextBlock Text="4" />
                </Viewbox>
            </Button>
            <Button x:Name="Bt5" Background="Gray" 
                                    Click="BtClick"
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="1" 
                                    Grid.Row="1">
                <Viewbox Stretch="Uniform">
                    <TextBlock Text="5" />
                </Viewbox>
            </Button>
            <Button x:Name="Bt6" Background="Gray" 
                                    Click="BtClick"
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="2" 
                                    Grid.Row="1">
                <Viewbox Stretch="Uniform">
                    <TextBlock Text="6" />
                </Viewbox>
            </Button>
            <Button x:Name="Bt1" Background="Gray" 
                                    Click="BtClick"
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="0" 
                                    Grid.Row="2">
                <Viewbox Stretch="Uniform">
                    <TextBlock Text="1" />
                </Viewbox>
            </Button>
            <Button x:Name="Bt2" Background="Gray" 
                                    Click="BtClick"
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="1" 
                                    Grid.Row="2">
                <Viewbox Stretch="Uniform">
                    <TextBlock Text="2" />
                </Viewbox>
            </Button>
            <Button x:Name="Bt3" Background="Gray" 
                                    Click="BtClick"
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="3" 
                                    Grid.Row="2">
                <Viewbox Stretch="Uniform">
                    <TextBlock Text="3" />
                </Viewbox>
            </Button>
            <Button x:Name="Bt0" Background="Gray" 
                                    Click="BtClick"
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="0" 
                                    Grid.ColumnSpan="2"
                                    Grid.Row="3">
                <Viewbox Stretch="Uniform">
                    <TextBlock Text="0" />
                </Viewbox>
            </Button>
            <Button x:Name="BtSil" Background="Gray" 
                                    Click="BtClick"
                                    Height="auto" 
                                    Width="auto" 
                                    Grid.Column="2" 
                                    Grid.Row="3">
                <Viewbox Stretch="Uniform">
                    <TextBlock Text="Sil" />
                </Viewbox>
            </Button>


        </Grid>
    </Border>


</UserControl>
